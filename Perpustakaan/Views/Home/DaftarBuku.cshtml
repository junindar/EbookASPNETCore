@using Microsoft.AspNetCore.Mvc.Rendering
@model System.Collections.Generic.List<Book>
@{
    ViewData["Title"] = "Daftar Buku";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <p style="display:inline-block; position:relative; right:-56%;">
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    DAFTAR BUKU
                    <div style="display:inline-block; position:relative; right:-68%;">
                        <button type="button" class="btn btn-primary btn-xs" data-id="Teknologi">Teknologi</button>
                        <button type="button" class="btn btn-primary btn-xs" data-id="Agama">Agama</button>
                        <button type="button" class="btn btn-primary btn-xs" data-id="Bahasa">Bahasa</button>
                        <button type="button" class="btn btn-primary btn-xs" data-id="Sosial">Sosial</button>
                    </div>
                </div>
                <div class="panel-body">
                    <partial name="_GetBuku" model ="Model"/>

                </div>

            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

    $(document).ready(function () {

        $(".btn-primary").click(function () {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("DaftarBukuByCategory", "Home")',
                data: { category: $(this).attr('data-id') },
                success: function (response) {
                    $(".panel-body").html(response);
                }

            });

        });





    });

</script>